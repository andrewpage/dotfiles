[user]
	name = Andrew Page
	email = andrew@andrewpage.me

[ui]
	colors = true

[color]
	ui = true

[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f

[alias]
	lg = log --graph --pretty=oneline --abbrev-commit
	aa = add -all
	ap = add -p
	br = branch
	ci = commit
	co = checkout
	plr = pull --rebase
	lod = log --oneline --decorate
	st = status

[push]
	default = matching

[core]
	editor = /usr/bin/vim
	excludesfile = /Users/andrewpage/.gitignore
